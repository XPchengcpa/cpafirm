<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="web_brand_promotion_message_custom" inherit_id="web.brand_promotion_message">
    <xpath expr="//t[@t-out=&quot;final_message % (odoo_logo, _message and ('- ' + _message) or '')&quot;]" position="replace">
      <t t-if="not request.env['ir.config_parameter'].sudo().get_param('hide_powered_by.show_powered_by')">
        <!-- Hide 'Powered by Odoo' -->
      </t>
      <t t-else="">
        <t t-raw="request.env['ir.config_parameter'].sudo().get_param('hide_powered_by.powered_by_html')"/>
      </t>
    </xpath>
  </template>
</odoo>

