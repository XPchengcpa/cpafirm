<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_library_book_tags_tree" model="ir.ui.view">
        <field name="name">library.book.tag.tree</field>
        <field name="model">library.book.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="action_library_book_tags" model="ir.actions.act_window">
        <field name="name">Library Book Tags</field>
        <field name="res_model">library.book.tag</field>
        <field name="view_mode">list</field>
    </record>
</odoo>